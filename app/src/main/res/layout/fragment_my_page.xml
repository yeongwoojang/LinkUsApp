<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray100"
    android:id="@+id/my"
    tools:context=".view.fragment.MyPageFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/red400">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanum_square_ac_l"
                        android:text="마이 페이지"
                        android:textColor="@color/white"
                        android:textSize="20dp" />
                </androidx.appcompat.widget.Toolbar>
                <View
                    android:id="@+id/toolbar_div"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/toolbar"
                    android:background="@color/gray300" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                >
                <!--<ImageView
                    android:id="@+id/profile_picture"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/baseline_profile_picture"
                    />-->
                <TextView
                    android:id="@+id/nickname_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_barun_gothic"
                    android:text="닉네임"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/profile_picture"
                    android:layout_marginLeft="16dp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nickname_tv"
                    android:layout_toRightOf="@+id/profile_picture"
                    android:orientation="horizontal"
                    android:layout_marginLeft="16dp"
                    >
                    <TextView
                        android:id="@+id/address_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="주소"
                        android:fontFamily="@font/nanum_barun_gothic"
                        android:textColor="@color/gray500"
                        android:textSize="20dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#"
                        android:fontFamily="@font/nanum_barun_gothic"
                        android:textColor="@color/gray500"
                        android:textSize="20dp"/>
                    <TextView
                        android:id="@+id/method_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="로그인 방식"
                        android:textColor="@color/gray500"
                        android:fontFamily="@font/nanum_barun_gothic"
                        android:textSize="20dp"/>
                </LinearLayout>
            </RelativeLayout>
            <Button
                android:id="@+id/update_info"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_background2"
                android:fontFamily="@font/nanum_barun_gothic"
                android:text="회원 정보 수정"
                android:textColor="@color/black"
                style="?android:attr/borderlessButtonStyle"
                android:textSize="16dp" />
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardUseCompatPadding="true"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                >
                <Button
                    android:id="@+id/my_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  내지역 설정"
                    android:gravity="left|center"
                    android:background="@color/transparent"
                    android:fontFamily="@font/nanum_barun_gothic"
                    android:drawableLeft="@drawable/baseline_location_on_24"
                    />
                <Button
                    android:id="@+id/my_study"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  내 스터디 그룹"
                    android:gravity="left|center"
                    android:background="@color/transparent"
                    android:fontFamily="@font/nanum_barun_gothic"
                    android:drawableLeft="@drawable/group_foreground"
                    android:layout_below="@+id/my_address"
                    />
                <Button
                    android:id="@+id/sign_access"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  가입 승인 관리"
                    android:gravity="left|center"
                    android:background="@color/transparent"
                    android:fontFamily="@font/nanum_barun_gothic"
                    android:drawableLeft="@drawable/management_foreground"
                    android:layout_below="@+id/my_study"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardUseCompatPadding="true"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                >
                <Button
                    android:id="@+id/share_app"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  LinkUs 공유"
                    android:gravity="left|center"
                    android:background="@color/transparent"
                    android:fontFamily="@font/nanum_barun_gothic"
                    android:drawableLeft="@drawable/shared_foreground"
                    />
                <Button
                    android:id="@+id/mypage_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  로그아웃"
                    android:gravity="left|center"
                    android:background="@color/transparent"
                    android:fontFamily="@font/nanum_barun_gothic"
                    android:drawableLeft="@drawable/baseline_logout_24"
                    android:layout_below="@+id/share_app"
                    />
                <Button
                    android:id="@+id/withdraw_app"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  탈퇴하기"
                    android:gravity="left|center"
                    android:background="@color/transparent"
                    android:fontFamily="@font/nanum_barun_gothic"
                    android:drawableLeft="@drawable/retire_foreground"
                    android:layout_below="@+id/mypage_logout"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>