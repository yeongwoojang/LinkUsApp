<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <import type="java.util.List"/>
        <import type="com.example.linkusapp.model.vo.Comment"/>
        <variable
            name="adapter"
            type="com.example.linkusapp.view.adapter.CommentAdapter" />
        <variable
            name="position"
            type="Integer" />
        <variable
            name="comment"
            type="com.example.linkusapp.model.vo.Comment" />
        <variable
            name="replyList"
            type="List&lt;List&lt;Comment&gt;&gt;" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/item_id_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_barun_gothic"
                android:text="@{comment.writer}"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_comment_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_id_tv"
                android:fontFamily="@font/nanum_barun_gothic"
                android:text="@{comment.comment}"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/item_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_comment_tv"
                android:fontFamily="@font/nanum_barun_gothic"
                android:text="@{comment.writeTime}"
                android:textSize="10sp" />

            <Button
                android:id="@+id/item_reply_btn"
                android:layout_width="wrap_content"
                android:layout_height="10sp"
                android:layout_below="@+id/item_comment_tv"
                android:layout_alignParentRight="true"
                android:background="@color/transparent"
                android:fontFamily="@font/nanum_barun_gothic"
                android:gravity="end"
                android:stateListAnimator="@null"
                android:text="답글 달기"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:onClick="@{()->adapter.replyBtnClickEvent(position)}"
                />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >
            <TextView
                android:id="@+id/open_reply_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:paddingLeft="40dp"
                android:text="답글1개 보기"
                />

        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/sub_comment_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            bind:item="@{replyList.get(position)}"
            />
        <View
            android:id="@+id/toolbar_div"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray300" />
    </LinearLayout>
</layout>